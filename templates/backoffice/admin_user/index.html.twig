{% extends 'backoffice/layout.html.twig' %}

{% block title %}
    Administrateurs -
    {{parent()}}
{% endblock %}

{% block body %}
<h1>Liste des administrateurs du Backoffice -</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for adminuser in adminusers %}
                <tr>
                    <td>{{ adminuser.id }}</td>
                    <td>{{ adminuser.email }}</td>
                    <td>{{ adminuser.roles ? adminuser.roles|json_encode : '' }}</td>
                    <td>{{ adminuser.firstname }}</td>
                    <td>{{ adminuser.lastname }}</td>
                    <td>{{ adminuser.createdAt ? adminuser.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ adminuser.updatedAt ? adminuser.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{# {{ path('backoffice_user_show', {'id': user.id}) }} #}">voir</a>
                        <a href="{# {{ path('backoffice_user_edit', {'id': user.id}) }} #}">editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{# {{ path('backoffice_user_new') }} #}">Ajouter</a>
{% endblock %}
