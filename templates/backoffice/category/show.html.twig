{% extends 'backoffice/layout.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block content %}
    <h1>Catégorie : {{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>        
            <tr>
                <th>Lieu</th>
                <td>{{ category.name }}</td>
            </tr>            
                <th>Créé le</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backoffice_category_index') }}" class="btn btn-dark my-2 my-sm-0 col-sd-1">Retour à la liste</a>

    <a href="{{ path('backoffice_category_edit', {'id': category.id}) }}" class="btn btn-dark my-2 my-sm-0 col-sd-1">Modifier</a>

    {{ include('backoffice/category/_delete_form.html.twig') }}
{% endblock %}
