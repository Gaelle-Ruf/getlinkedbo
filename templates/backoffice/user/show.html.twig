{% extends 'backoffice/layout.html.twig' %}

{% block title %}Utilisateurs
{% endblock %}

{% block content %}
    <h1>Linker : {{ user.firstname }} {{ user.lastname }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>        
            <tr>
                <th>Pseudo</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Visuel</th>
                <td>                        
                    <img src="{{ user.picture }}" width="100">
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Membre depuis le</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backoffice_user_index') }}" class="btn btn-dark my-2 my-sm-0 col-sd-1">Retour à la liste</a>

    <a href="{{ path('backoffice_user_edit', {'id': user.id}) }}" class="btn btn-dark my-2 my-sm-0 col-sd-1">Modifier</a>

    {{ include('backoffice/user/_delete_form.html.twig') }}
{% endblock %}
