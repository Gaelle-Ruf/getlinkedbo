{% extends 'backoffice/layout.html.twig' %}

{% block title %}
    Utilisateurs -
    {{parent()}}
{% endblock %}

{% block body %}
<h1>Tous les Linkers</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Avatar</th>
                <th>Description</th>
                <th>Membres du groupe</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>                        
                        <img src="{{ user.picture }}" width="100">
                    </td>
                    <td>{{ user.description  | u.truncate(100, '...') }}</td>
                    <td>{{ user.nbMembers }}</td>
                    <td>{{ user.email }}</td>
                    {# <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                    <td>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <a href class="btn btn-dark my-2 my-sm-0 col-sd-1""{{ path('backoffice_user_show', {'id': user.id}) }}">Voir</a>
                        <a href class="btn btn-dark my-2 my-sm-0 col-sd-1""{{ path('backoffice_user_edit', {'id': user.id}) }}">Modifier</a>
                    </div>
                    </td>
                        
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">Aucun linker trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backoffice_user_add') }}">Ajouter</a>
{% endblock %}

