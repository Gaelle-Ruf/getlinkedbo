{% extends 'backoffice/layout.html.twig' %}

{% block title %}
    Linkers -
    {{parent()}}
{% endblock %}

{% block content %}
<h1>Tous les Organisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de l'établissement</th>
                <th>Avatar</th>
                <th>Type d'établissement</th>                
                <th>Bio</th>
                <th>Contact</th>
                <th>Référent</th>
                <th>Facebook</th> 
                <th>Instagram</th>    
                <th>Twitter</th>                          
                <th>Linker depuis le</th>
            </tr>
        </thead>
        <tbody>
            {% for promoter in promoters %}
                <tr>
                    <td>{{ promoter.id }}</td>
                    <td>{{ promoter.name }}</td>
                    <td>                        
                        <img src="{{ promoter.picture }}" width="100">
                    </td>                    
                    {# <td>{{ promoter.category }}</td> #}
                    <td>{{ promoter.description  | u.truncate(50, '...') }}</td>
                    <td>{{ promoter.email }}</td>
                    <td>{{ promoter.firstname }}</td> 
                    <td>{{ promoter.lastname }}</td> 
                    <td>{{ promoter.facebook }}</td>         
                    <td>{{ promoter.instagram }}</td> 
                    <td>{{ promoter.twitter }}</td>      
                    <td>{{ promoter.createdAt ? promoter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    {# <td>{{ promoter.updatedAt ? promoter.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                    <td>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <a href class="btn btn-dark my-2 my-sm-0 col-sd-1""{{ path('backoffice_user_show', {'id': promoter.id}) }}">Voir</a>
                        {# <a href class="btn btn-dark my-2 my-sm-0 col-sd-1""{{ path('backoffice_user_edit', {'id': promoter.id}) }}">Modifier</a> #}
                    </div>
                    </td>
                        
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">Aucun organisateur trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backoffice_user_add') }}">Ajouter</a>
{% endblock %}